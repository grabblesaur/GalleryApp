<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="@dimen/item_post_internal_margin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_post_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            />

        <LinearLayout
            android:id="@+id/item_post_layout"
            android:paddingLeft="@dimen/item_post_padding_horizontal"
            android:paddingRight="@dimen/item_post_padding_horizontal"
            android:paddingTop="@dimen/item_post_padding_vertical"
            android:paddingBottom="@dimen/item_post_padding_vertical"
            android:gravity="fill_vertical"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_post_title"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                tools:text="Post title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_post_description"
                tools:text="Post description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_post_source"
                android:layout_gravity="end"
                android:textColor="@android:color/holo_blue_light"
                tools:text="Источник: Bloomberg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>